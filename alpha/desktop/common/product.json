{
    "type": "container",
    "sections": {
        "sec1": {
            "type": "container",
            "sections": {
                "pImage": {
                    "type": "product-image",
                    "url": "{{product.images.[0]}}",
                    "style": {
                        "width": "100%",
                        "height": "100%"
                    }
                }
            },
            "order": [
                "pImage"
            ],
            "style": {
                "flexGrow": "1",
                "width": "100%",
                "height": "50%"
            }
        },
        "sec2": {
            "type": "container",
            "sections": {
                "groupTitle": {
                    "type": "container",
                    "sections": {
                        "pTitle": {
                            "type": "text",
                            "text": "{{product.title}}",
                            "style": {
                                "color": "var(--accent-color)"
                            }
                        },
                        "pSubTitle": {
                            "type": "text",
                            "text": "{{product.subtitle}}",
                            "style": {
                                "color": "#686f89",
                                "fontSize": "13px"
                            }
                        }
                    },
                    "order": [
                        "pTitle",
                        "pSubTitle"
                    ],
                    "style": {
                        "flexDirection": "column"
                    }
                },
                "groupPrice": {
                    "type": "container",
                    "sections": {
                        "priceDetail": {
                            "type": "container",
                            "sections": {
                                "pPrice": {
                                    "type": "text",
                                    "text": "₹{{product.price}}",
                                    "style": {
                                        "color": "#686f89",
                                        "fontSize": "13px",
                                        "textDecorationLine": "line-through"
                                    }
                                },
                                "pSalePrice": {
                                    "type": "text",
                                    "text": "₹{{product.salePrice}}",
                                    "style": {
                                        "color": "#121212",
                                        "fontSize": "16px"
                                    }
                                }
                            },
                            "style": {
                                "display": "flex",
                                "flexDirection": "column"
                            },
                            "order": [
                                "pSalePrice",
                                "pPrice"
                            ]
                        },
                        "add-to-cart": {
                            "type": "add-to-cart",
                            "embeddedTemplates": {
                                "cartEmpty": {
                                    "type": "button",
                                    "text": "Add To Cart",
                                    "action": "addToCart",
                                    "style": {
                                        "width": "auto",
                                        "background": "rgb(233, 110, 181)",
                                        "color": "rgb(89, 17, 17)",
                                        "height": "30px",
                                        "fontSize": "12px",
                                        "borderRadius": "20px",
                                        "border": "none",
                                        "padding": "0px 12px",
                                        "fontWeight": "800"
                                    }
                                },
                                "cartNotEmpty": {
                                    "type": "container",
                                    "sections": {
                                        "minus": {
                                            "type": "image",
                                            "url": "http://localhost:3000/themes/elementary/img/circleMinus.svg",
                                            "action": "removeFromCart",
                                            "style": {
                                                "width": "26px",
                                                "height": "26px",
                                                "cursor": "pointer"
                                            }
                                        },
                                        "items": {
                                            "type": "text",
                                            "text": "{{product.quantity}}",
                                            "style": {
                                                "padding": "0px 12px",
                                                "border": "1px solid rgb(104, 111, 137)",
                                                "margin": "0px 10px",
                                                "borderRadius": "2px",
                                                "color": "rgb(104, 111, 137)",
                                                "fontSize": "14px"
                                            }
                                        },
                                        "plus": {
                                            "type": "image",
                                            "url": "http://localhost:3000/themes/elementary/img/circlePlus.svg",
                                            "action": "addToCart",
                                            "style": {
                                                "width": "26px",
                                                "height": "26px",
                                                "cursor": "pointer"
                                            }
                                        }
                                    },
                                    "style": {
                                        "color": "white",
                                        "borderRadius": "20px",
                                        "border": "none",
                                        "padding": "0px 6px",
                                        "height": "30px",
                                        "alignItems": "center",
                                        "justifyContent": "space-between"
                                    },
                                    "order": [
                                        "minus",
                                        "items",
                                        "plus"
                                    ]
                                }
                            }
                        }
                    },
                    "order": [
                        "priceDetail",
                        "add-to-cart"
                    ],
                    "style": {
                        "display": "flex",
                        "alignItems": "center",
                        "justifyContent": "space-between"
                    }
                }
            },
            "order": [
                "groupTitle",
                "groupPrice"
            ],
            "style": {
                "flexGrow": "1",
                "width": "100%",
                "height": "50%",
                "background": "#FFF",
                "flexDirection": "column",
                "padding": "10px",
                "justifyContent": "space-between"
            }
        }
    },
    "order": [
        "sec1",
        "sec2"
    ],
    "style": {
        "boxShadow": "0 2px 5px rgb(104 111 137 / 20%)",
        "borderRadius": "19px",
        "overflow": "hidden",
        "display": "flex",
        "flexDirection": "column",
        "height": "280px",
        "width": "230px",
        "margin": "10px"
    }
}