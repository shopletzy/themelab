{
    "style": {
        "background": "#ffffff",
        "flexDirection": "column",
        "display": "flex",
        "width": "500px",
        "height": "100%",
        "justifyContent": "space-between",
        "boxShadow": "rgba(100, 100, 111, 0.2) 0px 7px 29px 0px",
        "bottom": "0px",
        "right": "10px",
        "zIndex": "10001"
    },
    "contentDisplay": {
        "type": "drawer",
        "placement": "right",
        "trigger": "ui.showAddonSelector"
    },
    "sections": {
        "header": {
            "type": "container",
            "sections": {
                "cartTitle": {
                    "type": "text",
                    "text": "Customize {{ui.product.title}}",
                    "style": {
                        "fontWeight": "400",
                        "fontSize": "15px",
                        "fontFamily": "Noto Sans",
                        "textTransform": "captialize",
                        "color": "var(--white-text-color)",
                        "display": "-webkit-box",
                        "WebkitLineClamp": "1",
                        "WebkitBoxOrient": "vertical",
                        "overflow": "hidden",
                        "textOverflow": "ellipsis",
                        "width": "80%"
                    }
                },
                "close": {
                    "type": "text",
                    "text": "Close",
                    "action": "setUiState",
                    "actionParams": {
                        "showAddonSelector": false
                    },
                    "style": {
                        "cursor": "pointer",
                        "fontSize": "14px",
                        "fontWeight": "400",
                        "fontFamily": "Noto Sans",
                        "color": "var(--white-text-color)",
                        "textTransform": "uppercase"
                    }
                }
            },
            "order": [
                "cartTitle",
                "close"
            ],
            "style": {
                "display": "flex",
                "justifyContent": "space-between",
                "flexShrink": "0",
                "height": "64px",
                "alignItems": "center",
                "color": "var(--white-text-color)",
                "borderBottom": "0px solid #ccc",
                "padding": "25px 18px",
                "background": "var(--primary-color)"
            }
        },
        "content": {
            "type": "container",
            "sections": {
                "addonGroups": {
                    "type": "addon-groups",
                    "embeddedTemplates": {
                        "addonGroup": {
                            "type": "container",
                            "sections": {
                                "title": {
                                    "type": "text",
                                    "text": "{{(addonGroup.title) & ' - ' & (addonGroup.minSelection >= 1 ? '(Any ' & addonGroup.minSelection & ')' : '(Optional)')}}",
                                    "style": {
                                        "background": "#d9d9d900",
                                        "borderRadius": "6px",
                                        "padding": "0px 18px 0px 18px",
                                        "marginBottom": "20px",
                                        "fontSize": "17px",
                                        "fontWeight": "500",
                                        "fontFamily": "Noto Sans",
                                        "color": "var(--primary-text-color)"
                                    }
                                },
                                "showWarning": {
                                    "type": "text",
                                    "text": "Show Warning",
                                    "showIf": "{{addonGroup.maxSelection}}",
                                    "actionParams": {
                                        "showWarning": true
                                    },
                                    "style": {
                                        "cursor": "pointer",
                                        "fontSize": "12px",
                                        "fontWeight": "500",
                                        "fontFamily": "Noto Sans",
                                        "color": "var(--primary-text-color)",
                                        "padding": "0px 30px",
                                        "backgroundColor": "#fa4a5b",
                                        "transform": "translateZ(0)",
                                        "height": "50px",
                                        "display": "flex",
                                        "alignItems": "center",
                                        "margin": "0px",
                                        "opacity": "1"
                                    }
                                },
                                "addons": {
                                    "type": "addons",
                                    "embeddedTemplates": {
                                        "addon": {
                                            "type": "container",
                                            "sections": {
                                                "tick": {
                                                    "type": "text",
                                                    "styleIf": [
                                                        {
                                                            "condition": "addon.selected",
                                                            "style": {
                                                                "marginRight": "10px",
                                                                "display": "block",
                                                                "borderRadius": "3px",
                                                                "height": "16px",
                                                                "width": "16px",
                                                                "transition": "transform 0.3s cubic-bezier(0.23, 1, 0.32, 1) 0ms",
                                                                "outline": "1px solid var(--primary-color)",
                                                                "border": "2px solid #fff",
                                                                "opacity": "1",
                                                                "background": "var(--primary-color)",
                                                                "transform": "scale(1)",
                                                                "cursor": "pointer"
                                                            }
                                                        },
                                                        {
                                                            "condition": "addon.disabled",
                                                            "style": {
                                                                "display": "block",
                                                                "height": "16px",
                                                                "width": "16px",
                                                                "outline": "#d9d9d9 solid 1px",
                                                                "borderRadius": "3px",
                                                                "border": "1px solid #fff",
                                                                "opacity": "1",
                                                                "background": "#FFF",
                                                                "color": "#62626680",
                                                                "marginRight": "10px",
                                                                "transition": "transform .3s cubic-bezier(.23,1,.32,1) 0ms",
                                                                "cursor": "not-allowed"
                                                            }
                                                        },
                                                        {
                                                            "default": {
                                                                "display": "block",
                                                                "height": "16px",
                                                                "width": "16px",
                                                                "outline": "#d9d9d9 solid 1px",
                                                                "borderRadius": "3px",
                                                                "border": "1px solid #fff",
                                                                "opacity": "1",
                                                                "background": "#FFF",
                                                                "color": "var(--primary-text-color)",
                                                                "marginRight": "10px",
                                                                "cursor": "pointer",
                                                                "transition": "transform .3s cubic-bezier(.23,1,.32,1) 0ms"
                                                            }
                                                        }
                                                    ]
                                                },
                                                "title": {
                                                    "type": "text",
                                                    "text": "{{addon.title}}",
                                                    "styleIf": [
                                                        {
                                                            "condition": "addon.selected",
                                                            "style": {
                                                                "fontSize": "15px",
                                                                "fontWeight": "400",
                                                                "fontFamily": "Noto Sans",
                                                                "color": "var(--primary-text-color)",
                                                                "cursor": "pointer",
                                                                "flexGrow": 1
                                                            }
                                                        },
                                                        {
                                                            "condition": "addon.disabled",
                                                            "style": {
                                                                "fontSize": "15px",
                                                                "fontWeight": "400",
                                                                "fontFamily": "Noto Sans",
                                                                "color": "#62626680",
                                                                "cursor": "not-allowed",
                                                                "flexGrow": 1
                                                            }
                                                        },
                                                        {
                                                            "default": {
                                                                "fontSize": "15px",
                                                                "fontWeight": "300",
                                                                "fontFamily": "Noto Sans",
                                                                "color": "var(--primary-text-color)",
                                                                "cursor": "pointer",
                                                                "flexGrow": 1
                                                            }
                                                        }
                                                    ]
                                                },
                                                "price": {
                                                    "type": "text",
                                                    "text": "â‚¹ {{addon.price ? addon.price: '0'}}",
                                                    "styleIf": [
                                                        {
                                                            "condition": "addon.selected",
                                                            "style": {
                                                                "fontSize": "15px",
                                                                "fontWeight": "400",
                                                                "fontFamily": "Noto Sans",
                                                                "color": "var(--primary-text-color)",
                                                                "marginRight": "15px"
                                                            }
                                                        },
                                                        {
                                                            "condition": "addon.disabled",
                                                            "style": {
                                                                "fontSize": "15px",
                                                                "fontWeight": "400",
                                                                "fontFamily": "Noto Sans",
                                                                "color": "#62626680",
                                                                "cursor": "not-allowed",
                                                                "marginRight": "15px"
                                                            }
                                                        },
                                                        {
                                                            "default": {
                                                                "fontSize": "15px",
                                                                "fontWeight": "300",
                                                                "fontFamily": "Noto Sans",
                                                                "color": "var(--primary-text-color)",
                                                                "marginRight": "15px"
                                                            }
                                                        }
                                                    ]
                                                }
                                            },
                                            "order": [
                                                "tick",
                                                "title",
                                                "price"
                                            ],
                                            "style": {
                                                "display": "flex",
                                                "flexDirection": "row",
                                                "justifyContent": "flex-start",
                                                "alignItems": "center",
                                                "width": "100%",
                                                "marginBottom": "15px",
                                                "background": "#fff"
                                            }
                                        }
                                    },
                                    "style": {
                                        "display": "flex",
                                        "flexDirection": "column",
                                        "alignItems": "center"
                                    }
                                }
                            },
                            "order": [
                                "title",
                                "addons"
                            ],
                            "style": {
                                "display": "flex",
                                "flexDirection": "column",
                                "paddingTop": "15px",
                                "paddingBottom": "10px",
                                "background": "#fff",
                                "borderBottom": "1px dashed #d9d9d9"
                            }
                        }
                    },
                    "style": {
                        "fontSize": "14px",
                        "fontWeight": "500"
                    }
                }
            },
            "order": [
                "addonGroups"
            ],
            "style": {
                "padding": "10px 20px",
                "width": "100%",
                "height": "100%",
                "background": "#fff",
                "overflow": "hidden",
                "overflow-y": "scroll",
                "scroll-snap-type": "y mandatory",
                "scroll-behavior": "smooth",
                "display": "flex",
                "flexDirection": "column"
            }
        },
        "actions": {
            "type": "container",
            "sections": {
                "confirm": {
                    "type": "button",
                    "text": "Add To Cart",
                    "action": "addCustomizationToCart",
                    "disabled": "$not(ui.isAddonSelectionValid)",
                    "styleIf": [
                        {
                            "condition": "$not(ui.isAddonSelectionValid)",
                            "style": {
                                "opacity": "0.5",
                                "cursor": "not-allowed",
                                "display": "flex",
                                "justifyContent": "center",
                                "alignItems": "center",
                                "borderRadius": "4px",
                                "boxShadow": "0px 6px 24px 0px rgba(0, 0, 0, 0.2)",
                                "overflow": "hidden",
                                "border": "none",
                                "paddingLeft": "30px",
                                "paddingRight": "30px",
                                "paddingTop": "15px",
                                "paddingBottom": "15px",
                                "background": "var(--primary-color)",
                                "color": "var(--white-text-color)",
                                "textTransform": "captialize"
                            }
                        },
                        {
                            "default": {
                                "display": "flex",
                                "justifyContent": "center",
                                "alignItems": "center",
                                "borderRadius": "4px",
                                "boxShadow": "0px 6px 24px 0px rgba(0, 0, 0, 0.2)",
                                "overflow": "hidden",
                                "border": "none",
                                "paddingLeft": "30px",
                                "paddingRight": "30px",
                                "paddingTop": "15px",
                                "paddingBottom": "15px",
                                "background": "var(--primary-color)",
                                "color": "var(--white-text-color)",
                                "cursor": "pointer",
                                "textTransform": "captialize"
                            }
                        }
                    ]
                }
            },
            "order": [
                "confirm"
            ],
            "style": {
                "display": "flex",
                "flexDirection": "column",
                "justifyContent": "end",
                "flexShrink": "0",
                "margin": "20px"
            }
        }
    },
    "order": [
        "header",
        "content",
        "actions"
    ]
}