{
    "sections": {
        "main_container": {
            "type": "container",
            "sections": {
                "box": {
                    "type": "container",
                    "sections": {
                        "closeIcon": {
                            "type": "image-button",
                            "url": "http://localhost:3000/themes/elementary/img/close.svg",
                            "text": "",
                            "action": "closeSignIn",
                            "style": {
                                "padding": "5px 10px",
                                "display": "flex",
                                "justifyContent": "center",
                                "alignItems": "center",
                                "border": "none",
                                "fontSize": "16px",
                                "background": "#FFF",
                                "cursor": "pointer",
                                "color": "#232631",
                                "position": "absolute",
                                "right": "0px",
                                "top": "0px"
                            }
                        },
                        "image": {
                            "type": "image",
                            "url": "{{siteConfig.logo}}",
                            "style": {
                                "height": "70px",
                                "width": "70px",
                                "borderRadius": "70px"
                            }
                        },
                        "heading": {
                            "type": "text",
                            "text": "{{siteConfig.brandName}}",
                            "style": {
                                "color": "#202020"
                            }
                        }
                    },
                    "order": [
                        "image",
                        "heading",
                        "closeIcon"
                    ],
                    "style": {
                        "display": "flex",
                        "alignItems": "center",
                        "justifyContent": "center",
                        "flexDirection": "column"
                    }
                }
            },
            "order": [
                "box"
            ]
        },
        "style": {
            "marginLeft": "10px",
            "flexDirection": "column",
            "background": "#FFF"
        }
    },
    "order": [
        "main_container"
    ],
    "style": {
        "display": "flex",
        "alignItems": "center",
        "flexDirection": "row",
        "width": "600px",
        "position": "absolute",
        "right": "0px",
        "top": "0px",
        "height": "100vh",
        "background": "#FFF"
    }
}