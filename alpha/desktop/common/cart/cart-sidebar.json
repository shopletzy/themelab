{
    "style": {
        "background": "#fff",
        "flexDirection": "column",
        "display": "flex",
        "width": "450px",
        "justifyContent": "space-between",
        "boxShadow": "rgba(100, 100, 111, 0.2) 0px 7px 29px 0px"
    },
    "sections": {
        "header": {
            "type": "container",
            "sections": {
                "cartTitle": {
                    "type": "text",
                    "text": "You've got {{cart.itemCount}} items in your cart",
                    "style": {
                        "fontWeight": "700"
                    }
                },
                "close": {
                    "type": "text",
                    "text": "Close",
                    "action": "toggleCartViewer",
                    "style": {
                        "cursor": "pointer"
                    }
                }
            },
            "order": [
                "cartTitle",
                "close"
            ],
            "style": {
                "flexShrink": "0",
                "height": "50px",
                "alignItems": "center",
                "color": "#202020",
                "paddingLeft": "20px",
                "paddingRight": "20px",
                "justifyContent": "space-between"
            }
        },
        "content": {
            "type": "cart-item-list",
            "refTemplate": "cart/cart-item",
            "style": {
                "overflowY": "auto",
                "flexGrow": "1"
            }
        },
        "footer": {
            "type": "container",
            "sections": {
                "totalContainer": {
                    "type": "container",
                    "sections": {
                        "subTotal": {
                            "type": "text",
                            "text": "Sub Total : â‚¹{{cart.subTotal}}",
                            "style": {
                                "textOverflow": "ellipsis",
                                "fontWeight": "bold",
                                "fontSize": "16"
                            }
                        }
                    },
                    "order": [
                        "subTotal"
                    ],
                    "style": {
                        "alignItems": "center",
                        "display": "flex"
                    }
                },
                "checkout": {
                    "type": "button",
                    "text": "Proceed to checkout",
                    "action": "checkout",
                    "style": {
                        "display": "flex",
                        "justifyContent": "center",
                        "alignItems": "center",
                        "borderRadius": "20px",
                        "boxShadow": "0px 6px 24px 0px rgba(0, 0, 0, 0.2)",
                        "overflow": "hidden",
                        "border": "none",
                        "paddingLeft": "30px",
                        "paddingRight": "30px",
                        "paddingTop": "15px",
                        "paddingBottom  ": "15px",
                        "background": "rgb(233, 110, 181)",
                        "color": "rgb(89, 17, 17)"
                    }
                }
            },
            "order": [
                "totalContainer",
                "checkout"
            ],
            "style": {
                "alignItems": "flex-end",
                "display": "flex",
                "justifyContent": "space-between",
                "padding": "25px",
                "flexShrink": "0"
            }
        }
    },
    "order": [
        "header",
        "content",
        "footer"
    ]
}