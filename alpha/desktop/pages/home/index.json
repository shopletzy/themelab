{
    "imports": [
        "common/header.json",
        "common/product.json",
        "common/product.css",
        "common/footer.json",
        "common/testimonials.json"
    ],
    "className": "slz-home",
    "initialUiState": {
        "showGeneral": true,
        "showDelivery": false,
        "showQuality": false,
        "showPayments": false
    },
    "meta": {
        "title": "{{themeConfig.homePageSEOConfig.metaTitle}}",
        "description": "{{themeConfig.homePageSEOConfig.metaDescription}}",
        "keywords": "{{themeConfig.homePageSEOConfig.metaKeywords}}"
    },
    "sections": {
        "header": {
            "type": "template",
            "templateName": "header",
            "className": "header"
        },
        "main": {
            "type": "container",
            "className": "main",
            "sections": {
                "banner": {
                    "type": "container",
                    "className": "banner",
                    "sections": {
                        "title": {
                            "type": "text",
                            "className": "title",
                            "text": "{{themeConfig.homePage.bannerTitle}}"
                        },
                        "description": {
                            "type": "text",
                            "className": "description",
                            "text": "{{themeConfig.homePage.bannerDescription}}"
                        },
                        "shopButton": {
                            "type": "button",
                            "className": "shopButton",
                            "text": "{{i18n.buttons.shop_now}}",
                            "action": "navigateTo",
                            "actionParams": {
                                "url": ""
                            }
                        }
                    },
                    "order": [
                        "title",
                        "description",
                        "shopButton"
                    ]
                },
                "h1Tag": {
                    "type": "heading",
                    "level": "h1",
                    "className": "h1Tag",
                    "text": "{{themeConfig.homePage.h1Title}}",
                    "style": {
                        "textAlign": "center",
                        "width": "65%",
                        "marginTop": "60px",
                        "marginBottom": "60px",
                        "fontSize": "28px",
                        "fontWeight": "400",
                        "fontFamily": "Noto Sans",
                        "color": "var(--primary-text-color)"
                    }
                },
                "fold-1": {
                    "type": "container",
                    "className": "fold-1",
                    "sections": {
                        "content": {
                            "type": "container",
                            "className": "content",
                            "sections": {
                                "title": {
                                    "type": "text",
                                    "className": "title",
                                    "text": "{{themeConfig.homePage.topProductsTitle}}"
                                },
                                "description": {
                                    "type": "text",
                                    "className": "description",
                                    "text": "{{themeConfig.homePage.topProductsSubTitle}}"
                                },
                                "top-products": {
                                    "className": "top-products",
                                    "type": "product-collection",
                                    "highlightKey": "Best Sellers"
                                }
                            },
                            "order": [
                                "title",
                                "description",
                                "top-products"
                            ]
                        }
                    },
                    "order": [
                        "content"
                    ]
                },
                "category-view": {
                    "type": "container",
                    "className": "category-view",
                    "sections": {
                        "left": {
                            "type": "container",
                            "className": "left",
                            "sections": {
                                "content": {
                                    "type": "container",
                                    "className": "content",
                                    "sections": {
                                        "title": {
                                            "type": "text",
                                            "className": "title",
                                            "text": "{{themeConfig.homePage.categoryLeftTitle}}"
                                        },
                                        "description": {
                                            "type": "text",
                                            "className": "description",
                                            "text": "{{themeConfig.homePage.categoryLeftSubTitle}}"
                                        },
                                        "shopButton": {
                                            "type": "button",
                                            "className": "shopButton",
                                            "text": "{{i18n.buttons.shop_now}}",
                                            "action": "navigateTo",
                                            "actionParams": {
                                                "url": ""
                                            }
                                        }
                                    },
                                    "order": [
                                        "title",
                                        "shopButton"
                                    ]
                                }
                            },
                            "order": [
                                "content"
                            ]
                        },
                        "center": {
                            "type": "container",
                            "className": "center",
                            "sections": {
                                "content": {
                                    "type": "container",
                                    "className": "content",
                                    "sections": {
                                        "title": {
                                            "type": "text",
                                            "className": "title",
                                            "text": "{{themeConfig.homePage.categoryCenterTitle}}"
                                        },
                                        "description": {
                                            "type": "text",
                                            "className": "description",
                                            "text": "{{themeConfig.homePage.categoryCenterSubTitle}}"
                                        },
                                        "shopButton": {
                                            "type": "button",
                                            "className": "shopButton",
                                            "text": "{{i18n.buttons.shop_now}}",
                                            "action": "navigateTo",
                                            "actionParams": {
                                                "url": ""
                                            }
                                        }
                                    },
                                    "order": [
                                        "title",
                                        "shopButton"
                                    ]
                                }
                            },
                            "order": [
                                "content"
                            ]
                        },
                        "right": {
                            "type": "container",
                            "className": "right",
                            "sections": {
                                "content": {
                                    "type": "container",
                                    "className": "content",
                                    "sections": {
                                        "title": {
                                            "type": "text",
                                            "className": "title",
                                            "text": "{{themeConfig.homePage.categoryRightTitle}}"
                                        },
                                        "description": {
                                            "type": "text",
                                            "className": "description",
                                            "text": "{{themeConfig.homePage.categoryRightSubTitle}}"
                                        },
                                        "shopButton": {
                                            "type": "button",
                                            "className": "shopButton",
                                            "text": "{{i18n.buttons.shop_now}}",
                                            "action": "navigateTo",
                                            "actionParams": {
                                                "url": ""
                                            }
                                        }
                                    },
                                    "order": [
                                        "title",
                                        "shopButton"
                                    ]
                                }
                            },
                            "order": [
                                "content"
                            ]
                        }
                    },
                    "order": [
                        "left",
                        "center",
                        "right"
                    ]
                },
                "fold-3": {
                    "type": "container",
                    "className": "fold-1",
                    "sections": {
                        "content": {
                            "type": "container",
                            "className": "content",
                            "sections": {
                                "title": {
                                    "type": "text",
                                    "className": "title",
                                    "text": "{{themeConfig.homePage.bestProductsTitle}}"
                                },
                                "description": {
                                    "type": "text",
                                    "className": "description",
                                    "text": "{{themeConfig.homePage.bestProductsSubTitle}}"
                                },
                                "top-products": {
                                    "className": "top-products",
                                    "type": "product-collection",
                                    "highlightKey": "Top Picks"
                                }
                            },
                            "order": [
                                "title",
                                "description",
                                "top-products"
                            ]
                        }
                    },
                    "order": [
                        "content"
                    ]
                },
                "offerBanner": {
                    "type": "container",
                    "className": "offerBanner",
                    "sections": {
                        "content": {
                            "type": "container",
                            "className": "content",
                            "sections": {
                                "title": {
                                    "type": "text",
                                    "className": "title",
                                    "text": "{{themeConfig.homePage.offerBannerTitle}}"
                                },
                                "shopButton": {
                                    "type": "button",
                                    "className": "shopButton",
                                    "text": "{{i18n.buttons.shop_now}}",
                                    "action": "navigateTo",
                                    "actionParams": {
                                        "url": ""
                                    }
                                }
                            },
                            "order": [
                                "title",
                                "shopButton"
                            ]
                        }
                    },
                    "order": [
                        "content"
                    ]
                },
                "testimonials-section": {
                    "type": "container",
                    "className": "testimonials-section",
                    "sections": {
                        "title": {
                            "type": "text",
                            "className": "title",
                            "text": "{{themeConfig.homePage.testimonialsTitle}}"
                        },
                        "subTitle": {
                            "type": "text",
                            "className": "subTitle",
                            "text": "{{themeConfig.homePage.testimonialSubTitle}}"
                        },
                        "testimonials-list": {
                            "type": "template",
                            "templateName": "testimonials",
                            "className": "testimonials-list"
                        }
                    },
                    "order": [
                        "title",
                        "subTitle",
                        "testimonials-list"
                    ]
                }
            },
            "order": [
                "banner",
                "h1Tag",
                "fold-1",
                "category-view",
                "fold-3",
                "offerBanner",
                "testimonials-section"
            ]
        },
        "footer": {
            "type": "template",
            "templateName": "footer"
        }
    },
    "order": [
        "header",
        "main",
        "footer"
    ]
}