{
    "type": "container",
    "sections": {
        "pThumbnail": {
            "type": "product-thumbnail",
            "thumbnailStyle": {
                "marginTop": "20px",
                "marginLeft": "20px",
                "width": "100px",
                "height": "100px",
                "padding": "5px",
                "cursor": "pointer",
                "objectFit": "cover",
                "borderRadius": "3px",
                "border": "1px solid var(--stroke-color)"
            },
            "style": {
                "display": "flex",
                "justifyContent": "center",
                "alignItems": "center",
                "flexDirection": "row",
                "background": "var(-background-color)",
                "paddingLeft": "10px",
                "paddingRight": "10px",
                "paddingBottom": "10px",
                "paddingTop": "10px",
                "bottom": 0,
                "left": 0
            }
        },
        "pZoom": {
            "type": "product-zoom",
            "imageStyle": {
                "width": "100%",
                "height": "512px",
                "objectFit": "contain",
                "display": "flex",
                "justifyContent": "center",
                "alignItems": "center",
                "border": "1px solid var(--stroke-color)",
                "padding": "10px 10px"
            }
        }
    },
    "order": [
        "pZoom",
        "pThumbnail"
    ],
    "style": {
        "display": "flex",
        "flexDirection": "column",
        "position": "relative",
        "width": "100%",
        "height": "100%"
    }
}