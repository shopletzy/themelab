{
    "imports": [
        "common/address-location-selector.json"
    ],
    "style": {
        "background": "var(--background-color)",
        "flexDirection": "column",
        "display": "flex",
        "width": "100%",
        "height": "100%",
        "justifyContent": "space-between",
        "bottom": "0px",
        "right": "0px",
        "left": "0px",
        "zIndex": "10000"
    },
    "contentDisplay": {
        "type": "drawer",
        "placement": "bottom",
        "trigger": "ui.showAddressEditor"
    },
    "showIf": "ui.showAddressEditor = true",
    "sections": {
        "header": {
            "type": "container",
            "sections": {
                "cartTitle": {
                    "type": "text",
                    "text": "Add Your Address",
                    "style": {
                        "fontWeight": "600",
                        "fontSize": "16px",
                        "fontFamily": "Noto Sans",
                        "color": "var(--primary-text-color)",
                        "padding": "25px 0px"
                    }
                },
                "close": {
                    "type": "button",
                    "text": "Cancel",
                    "action": "setUiState",
                    "actionParams": {
                        "showAddressEditor": "false"
                    },
                    "style": {
                        "border": "none",
                        "background": "none",
                        "cursor": "pointer",
                        "fontWeight": "400",
                        "fontSize": "15px",
                        "fontFamily": "Noto Sans",
                        "color": "var(--primary-text-color)",
                        "padding": "25px 0px",
                        "textTransform": "capitalize"
                    }
                }
            },
            "order": [
                "cartTitle",
                "close"
            ],
            "style": {
                "display": "flex",
                "flexShrink": "0",
                "height": "64px",
                "alignItems": "center",
                "color": "var(--primary-text-color)",
                "borderBottom": "1px solid var(--stroke-color)",
                "padding": "25px 18px",
                "justifyContent": "space-between"
