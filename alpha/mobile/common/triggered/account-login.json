{
    "imports": [
        "common/account-login.css"
    ],
    "className": "account-login",
    "contentDisplay": {
        "type": "drawer",
        "placement": "left",
        "trigger": "ui.showLogin"
    },
    "sections": {
        "header": {
            "type": "container",
            "sections": {
                "close": {
                    "type": "image",
                    "url": "{{themeUrl}}/img/common/close.svg",
                    "action": "setUiState",
                    "actionParams": {
                        "showLogin": "false"
                    },
                    "style": {
                        "cursor": "pointer"
                    }
                }
            },
            "order": [
                "close"
            ],
            "style": {
                "display": "flex",
                "flexShrink": "0",
                "width": "100%",
                "height": "50px",
                "alignItems": "center",
                "textAlign": "right",
                "textTransform": "uppercase",
                "color": "var(--primary-text-color)",
                "paddingLeft": "10px",
                "paddingRight": "0px",
                "justifyContent": "flex-start",
                "cursor": "pointer"
            }
        },
        "content": {
            "type": "container",
            "sections": {
                "header-logo": {
                    "type": "container",
                    "sections": {
                        "logo": {
                            "className": "logo",
                            "type": "image",
                            "url": "{{themeConfig.logo.logoBlack}}",
                            "style": {
                                "paddingTop": "10px",
                                "paddingBottom": "10px",
                                "width": "100%",
                                "height": "84px",
                                "objectFit": "contain"
                            }
                        }
                    },
                    "style": {
                        "marginTop": "10px",
                        "marginBottom": "30px",
                        "display": "flex",
                        "flexDirection": "column",
                        "alignItems": "center",
                        "justifyContent": "flex-start"
                    },
                    "order": [
                        "logo"
                    ]
                },
                "login": {
                    "type": "account-login",
                    "eventActions": {
                        "onCustomerLogin": {
                            "action": "setUiState",
                            "actionParams": {
                                "showLogin": "false"
                            }
                        }
                    },
                    "sections": {
                        "header": {
                            "type": "container",
                            "sections": {
                                "titleEmail": {
                                    "type": "text",
                                    "text": "Login",
                                    "showIf": "login.step = 'init'",
                                    "style": {
                                        "fontWeight": "700",
                                        "color": "var(--primary-text-color)",
                                        "fontSize": "24px",
                                        "fontFamily": "Noto Sans",
                                        "marginBottom": "20px"
                                    }
                                },
                                "titleVerifyOtp": {
                                    "type": "text",
                                    "text": "Verify OTP",
                                    "showIf": "login.step = 'verify-login-otp'",
                                    "style": {
                                        "fontWeight": "700",
                                        "color": "var(--primary-text-color)",
                                        "fontSize": "24px",
                                        "fontFamily": "Noto Sans"
                                    }
                                },
                                "signUp": {
                                    "type": "text",
                                    "text": "Sign Up",
                                    "showIf": "login.step = 'signup'",
                                    "style": {
                                        "fontWeight": "700",
                                        "color": "var(--primary-text-color)",
                                        "fontSize": "24px",
                                        "fontFamily": "Noto Sans"
                                    }
                                },
                                "titleVerifyMobile": {
                                    "type": "text",
                                    "text": "Verify Mobile Number",
                                    "showIf": "login.step = 'send-mobile-otp'",
                                    "style": {
                                        "fontWeight": "700",
                                        "color": "var(--primary-text-color)",
                                        "fontSize": "24px",
                                        "fontFamily": "Noto Sans"
                                    }
                                }
                            },
                            "order": [
                                "titleEmail",
                                "titleVerifyOtp",
                                "signUp",
                                "titleVerifyMobile"
                            ],
                            "style": {
                                "width": "100%",
                                "height": "75px",
                                "display": "flex",
                                "alignItems": "center",
                                "justifyContent": "flex-start",
                                "background": "var(--background-color)"
                            }
                        },
                        "header2": {
                            "type": "container",
                            "sections": {
                                "subTitleEmail": {
                                    "type": "text",
                                    "text": "We have sent you an OTP on your email address /mobile number",
                                    "showIf": "login.step = 'verify-login-otp'",
                                    "style": {
                                        "marginBottom": "10px",
                                        "lineHeight": "1.75rem",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300"
                                    }
                                },
                                "subTitleMobile": {
                                    "type": "text",
                                    "text": "We have sent you an OTP on your mobile number.",
                                    "showIf": "login.step = 'verify-mobile-otp'",
                                    "style": {
                                        "marginBottom": "10px",
                                        "lineHeight": "1.75rem",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300"
                                    }
                                }
                            },
                            "order": [
                                "subTitleEmail",
                                "subTitleMobile"
                            ]
                        },
                        "init": {
                            "type": "container",
                            "sections": {
                                "title": {
                                    "type": "text",
                                    "text": "Login",
                                    "style": {
                                        "fontWeight": "700"
                                    }
                                },
                                "loginWithEmail": {
                                    "type": "button",
                                    "text": "Login",
                                    "action": "loginWithOTP",
                                    "style": {
                                        "cursor": "pointer"
                                    }
                                },
                                "signup": {
                                    "type": "button",
                                    "text": "Register new account",
                                    "action": "signup",
                                    "style": {
                                        "cursor": "pointer"
                                    }
                                }
                            },
                            "order": [
                                "title",
                                "loginWithEmail",
                                "signup"
                            ]
                        },
                        "login": {
                            "type": "container",
                            "sections": {
                                "title": {
                                    "type": "text",
                                    "text": "Email ID / Mobile Number",
                                    "style": {
                                        "fontWeight": "300",
                                        "color": "var(--primary-text-color)",
                                        "fontSize": "14px",
                                        "fontFamily": "Noto Sans"
                                    }
                                },
                                "loginId": {
                                    "type": "input",
                                    "bind": "login.email",
                                    "placeholder": "Enter your Email ID / Mobile No.",
                                    "style": {
                                        "marginTop": "10px",
                                        "marginBottom": "30px",
                                        "padding": "25px 10px",
                                        "borderLeft": "none",
                                        "borderRight": "none",
                                        "borderTop": "none",
                                        "borderRadius": "6px",
                                        "border": "1px solid var(--stroke-color)",
                                        "background": "var(--background-color)",
                                        "height": "44px",
                                        "outline": "none",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300"
                                    }
                                },
                                "error": {
                                    "type": "text",
                                    "text": "{{login.error.message}}",
                                    "style": {
                                        "color": "var(--error-text-color)",
                                        "fontSize": "14px",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300",
                                        "paddingBottom": "5px"
                                    },
                                    "showIf": "login.error"
                                },
                                "submit": {
                                    "type": "button",
                                    "text": "{{login.loading = 'pending' ? 'loading...' : 'Continue'}}",
                                    "action": "sendLoginOTP",
                                    "disabled": "login.loading = 'pending' or $not(login.email.valid)",
                                    "style": {
                                        "cursor": "pointer",
                                        "marginTop": "20px",
                                        "marginBottom": "0px",
                                        "padding": "15px",
                                        "width": "100%",
                                        "borderRadius": "5px",
                                        "background": "var(--primary-color)",
                                        "fontSize": "15px",
                                        "color": "var(--white-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "500",
                                        "outline": "none",
                                        "border": "none"
                                    }
                                },
                                "or": {
                                    "type": "text",
                                    "text": "OR",
                                    "style": {
                                        "color": "var(--primary-text-color)",
                                        "fontSize": "14px",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300",
                                        "marginBottom": "10px",
                                        "marginTop": "20px",
                                        "width": "100%",
                                        "textAlign": "center"
                                    }
                                },
                                "signup": {
                                    "type": "button",
                                    "text": "Create New Account",
                                    "action": "signup",
                                    "style": {
                                        "cursor": "pointer",
                                        "marginTop": "10px",
                                        "marginBottom": "20px",
                                        "padding": "15px",
                                        "width": "100%",
                                        "borderRadius": "5px",
                                        "background": "var(--background-color)",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "500",
                                        "outline": "none",
                                        "border": "1px solid var(--stroke-color)"
                                    }
                                }
                            },
                            "style": {
                                "display": "flex",
                                "flexDirection": "column",
                                "background": "#ff000000",
                                "width": "100%"
                            },
                            "order": [
                                "title",
                                "loginId",
                                "error",
                                "submit",
                                "or",
                                "signup"
                            ],
                            "showIf": "login.step = 'init'"
                        },
                        "signup": {
                            "type": "container",
                            "sections": {
                                "Loading...": {
                                    "type": "text",
                                    "text": "Loading...",
                                    "style": {
                                        "color": "var(--primary-text-color)"
                                    },
                                    "showIf": "login.loading = 'pending'"
                                },
                                "fullname": {
                                    "type": "input",
                                    "bind": "login.signupFullName",
                                    "placeholder": "Enter Full Name",
                                    "style": {
                                        "marginTop": "20px",
                                        "padding": "25px 10px",
                                        "borderLeft": "none",
                                        "borderRight": "none",
                                        "borderTop": "none",
                                        "border": "1px solid var(--stroke-color)",
                                        "background": "var(--background-color)",
                                        "borderRadius": "6px",
                                        "height": "40px",
                                        "outline": "none",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300"
                                    }
                                },
                                "email": {
                                    "type": "input",
                                    "bind": "login.signupEmail",
                                    "placeholder": "Enter Email",
                                    "styleIf": [
                                        {
                                            "condition": "login.signupEmail.error",
                                            "style": {
                                                "marginTop": "20px",
                                                "padding": "25px 10px",
                                                "borderLeft": "none",
                                                "borderRight": "none",
                                                "borderTop": "none",
                                                "borderRadius": "6px",
                                                "border": "1px solid var(--error-text-color)",
                                                "background": "var(--background-color)",
                                                "height": "40px",
                                                "outline": "none",
                                                "fontSize": "13px",
                                                "color": "var(--error-text-color)",
                                                "fontFamily": "Noto Sans",
                                                "fontWeight": "300"
                                            }
                                        },
                                        {
                                            "default": {
                                                "marginTop": "20px",
                                                "padding": "25px 10px",
                                                "borderLeft": "none",
                                                "borderRight": "none",
                                                "borderTop": "none",
                                                "background": "var(--background-color)",
                                                "borderRadius": "6px",
                                                "border": "1px solid var(--stroke-color)",
                                                "height": "40px",
                                                "outline": "none",
                                                "fontSize": "15px",
                                                "color": "var(--primary-text-color)",
                                                "fontFamily": "Noto Sans",
                                                "fontWeight": "300"
                                            }
                                        }
                                    ]
                                },
                                "error": {
                                    "type": "text",
                                    "text": "{{login.error.message}}",
                                    "style": {
                                        "color": "var(--error-text-color)",
                                        "fontSize": "14px",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "400"
                                    },
                                    "showIf": "login.error"
                                },
                                "goback": {
                                    "type": "button",
                                    "text": "Go back",
                                    "action": "goStepBack",
                                    "style": {
                                        "cursor": "pointer",
                                        "marginBottom": "20px",
                                        "padding": "15px",
                                        "borderRadius": "5px",
                                        "background": "#ff000000",
                                        "lineHeight": "1.75rem",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "400",
                                        "textDecorationLine": "underline",
                                        "outline": "none",
                                        "border": "none"
                                    }
                                },
                                "submit": {
                                    "type": "button",
                                    "text": "{{login.loading = 'pending' ? 'loading...' : 'Send OTP'}}",
                                    "action": "sendSignupOTP",
                                    "disabled": "login.loading = 'pending' or $not(login.signupFullName.valid and login.signupEmail.valid)",
                                    "style": {
                                        "cursor": "pointer",
                                        "marginTop": "40px",
                                        "marginBottom": "20px",
                                        "padding": "15px",
                                        "width": "100%",
                                        "borderRadius": "5px",
                                        "background": "var(--primary-color)",
                                        "fontSize": "15px",
                                        "color": "var(--white-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "500",
                                        "outline": "none",
                                        "border": "none"
                                    }
                                }
                            },
                            "style": {
                                "display": "flex",
                                "flexDirection": "column",
                                "background": "#ff000000",
                                "width": "100%"
                            },
                            "order": [
                                "fullname",
                                "email",
                                "error",
                                "submit",
                                "goback"
                            ],
                            "showIf": "login.step = 'signup'"
                        },
                        "verifyLoginOTP": {
                            "type": "container",
                            "sections": {
                                "loginId": {
                                    "type": "input",
                                    "bind": "login.loginOTP",
                                    "placeholder": "Enter OTP",
                                    "style": {
                                        "marginTop": "20px",
                                        "padding": "25px 10px",
                                        "borderLeft": "none",
                                        "borderRight": "none",
                                        "borderTop": "none",
                                        "background": "var(--background-color)",
                                        "borderRadius": "6px",
                                        "border": "1px solid var(--stroke-color)",
                                        "height": "40px",
                                        "outline": "none",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300"
                                    }
                                },
                                "error": {
                                    "type": "text",
                                    "text": "{{login.error.message}}",
                                    "style": {
                                        "color": "var(--error-text-color)",
                                        "fontSize": "14px",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300",
                                        "paddingBottom": "5px"
                                    },
                                    "showIf": "login.error"
                                },
                                "goback": {
                                    "type": "button",
                                    "text": "Go back",
                                    "action": "goStepBack",
                                    "style": {
                                        "cursor": "pointer",
                                        "marginBottom": "20px",
                                        "padding": "15px",
                                        "borderRadius": "5px",
                                        "background": "#ff000000",
                                        "lineHeight": "1.75rem",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "400",
                                        "textDecorationLine": "underline",
                                        "outline": "none",
                                        "border": "none"
                                    }
                                },
                                "submit": {
                                    "type": "button",
                                    "text": "Verify OTP",
                                    "action": "veryifyLoginOTP",
                                    "style": {
                                        "cursor": "pointer",
                                        "marginTop": "40px",
                                        "marginBottom": "20px",
                                        "padding": "15px",
                                        "width": "100%",
                                        "borderRadius": "5px",
                                        "background": "var(--primary-color)",
                                        "fontSize": "15px",
                                        "color": "var(--white-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "500",
                                        "outline": "none",
                                        "border": "none"
                                    }
                                }
                            },
                            "order": [
                                "loginId",
                                "error",
                                "submit",
                                "goback"
                            ],
                            "showIf": "login.step = 'verify-login-otp'",
                            "style": {
                                "display": "flex",
                                "flexDirection": "column",
                                "background": "#ff000000",
                                "width": "100%"
                            }
                        },
                        "mobileOTP": {
                            "type": "container",
                            "sections": {
                                "loginId": {
                                    "type": "input",
                                    "bind": "login.signupMobile",
                                    "placeholder": "Enter Mobile Number",
                                    "style": {
                                        "marginTop": "20px",
                                        "padding": "25px 10px",
                                        "borderLeft": "none",
                                        "borderRight": "none",
                                        "borderTop": "none",
                                        "background": "var(--background-color)",
                                        "borderRadius": "6px",
                                        "border": "1px solid var(--stroke-color)",
                                        "height": "40px",
                                        "outline": "none",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300"
                                    }
                                },
                                "error": {
                                    "type": "text",
                                    "text": "{{login.error.message}}",
                                    "style": {
                                        "color": "var(--error-text-color)",
                                        "fontSize": "14px",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "400"
                                    },
                                    "showIf": "login.error"
                                },
                                "submit": {
                                    "type": "button",
                                    "text": "Send OTP",
                                    "action": "sendMobileOTP",
                                    "style": {
                                        "cursor": "pointer",
                                        "marginTop": "40px",
                                        "marginBottom": "20px",
                                        "padding": "15px",
                                        "width": "100%",
                                        "borderRadius": "5px",
                                        "background": "var(--primary-color)",
                                        "fontSize": "15px",
                                        "color": "var(--white-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "500",
                                        "outline": "none",
                                        "border": "none"
                                    }
                                }
                            },
                            "style": {
                                "display": "flex",
                                "flexDirection": "column",
                                "background": "#ff000000",
                                "width": "100%"
                            },
                            "order": [
                                "loginId",
                                "error",
                                "submit"
                            ],
                            "showIf": "login.step = 'send-mobile-otp'"
                        },
                        "verifyMobileOTP": {
                            "type": "container",
                            "sections": {
                                "loginId": {
                                    "type": "input",
                                    "bind": "login.signupMobileOTP",
                                    "placeholder": "Enter Mobile OTP",
                                    "style": {
                                        "marginTop": "20px",
                                        "padding": "25px 10px",
                                        "borderLeft": "none",
                                        "borderRight": "none",
                                        "borderTop": "none",
                                        "background": "var(--background-color)",
                                        "borderRadius": "6px",
                                        "border": "1px solid var(--stroke-color)",
                                        "height": "40px",
                                        "outline": "none",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300"
                                    }
                                },
                                "error": {
                                    "type": "text",
                                    "text": "{{login.error.message}}",
                                    "style": {
                                        "color": "var(--error-text-color)",
                                        "fontSize": "14px",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "300",
                                        "paddingBottom": "5px"
                                    },
                                    "showIf": "login.error"
                                },
                                "submit": {
                                    "type": "button",
                                    "text": "Verify",
                                    "action": "verifyMobileOTP",
                                    "style": {
                                        "cursor": "pointer",
                                        "marginTop": "40px",
                                        "marginBottom": "20px",
                                        "padding": "15px",
                                        "width": "100%",
                                        "borderRadius": "5px",
                                        "background": "var(--background-color)",
                                        "fontSize": "15px",
                                        "color": "var(--white-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "500",
                                        "outline": "none",
                                        "border": "none"
                                    }
                                },
                                "goback": {
                                    "type": "button",
                                    "text": "Go back",
                                    "action": "goStepBack",
                                    "style": {
                                        "cursor": "pointer",
                                        "marginBottom": "20px",
                                        "padding": "15px",
                                        "borderRadius": "5px",
                                        "background": "#ff000000",
                                        "lineHeight": "1.75rem",
                                        "fontSize": "15px",
                                        "color": "var(--primary-text-color)",
                                        "fontFamily": "Noto Sans",
                                        "fontWeight": "400",
                                        "textDecorationLine": "underline",
                                        "outline": "none",
                                        "border": "none"
                                    }
                                }
                            },
                            "order": [
                                "loginId",
                                "error",
                                "submit",
                                "goback"
                            ],
                            "style": {
                                "display": "flex",
                                "flexDirection": "column",
                                "background": "#ff000000",
                                "width": "100%"
                            },
                            "showIf": "login.step = 'verify-mobile-otp'"
                        },
                        "loggedIn": {
                            "type": "container",
                            "sections": {
                                "title": {
                                    "type": "text",
                                    "text": "Logged In",
                                    "style": {
                                        "fontWeight": "700"
                                    }
                                }
                            },
                            "order": [
                                "title"
                            ],
                            "showIf": "login.step = 'logged-in'"
                        }
                    },
                    "order": [
                        "header",
                        "header2",
                        "login",
                        "signup",
                        "verifyLoginOTP",
                        "mobileOTP",
                        "verifyMobileOTP",
                        "loggedIn"
                    ],
                    "style": {
                        "color": "var(--primary-text-color)",
                        "width": "100%"
                    }
                }
            },
            "order": [
                "header-logo",
                "login"
            ],
            "style": {
                "display": "flex",
                "flexDirection": "column",
                "alignItems": "center",
                "justifyContent": "flex-start",
                "bottom": 0,
                "left": 0,
                "background": "#FFFFFF00",
                "padding": "20px",
                "width": "100%",
                "height": "100%",
                "borderRadius": "10px"
            }
        }
    },
    "order": [
        "header",
        "content"
    ]
}